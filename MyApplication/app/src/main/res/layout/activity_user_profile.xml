<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@color/Microsoftblue"
    tools:context=".activity.UserProfileActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageBack"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:padding="5dp"
        android:src="@drawable/icon_back"
        android:layout_gravity="start|top" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/profile_image_view"
        android:layout_width="160dp"
        android:layout_height="160dp"
        app:shapeAppearanceOverlay="@style/circular"
        app:strokeWidth="5dp"
        app:strokeColor="@color/black"
        android:padding="5dp"
        android:backgroundTint="@color/my_primary"
        android:scaleType="centerCrop"
        android:src="@drawable/person_icon" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        app:cardBackgroundColor="@color/Grey"
        android:layout_alignParentBottom="true"
        app:cardCornerRadius="35dp"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="28dp"
            >

            <TextView
                android:id="@+id/username"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:elevation="5dp"
                android:hint="Username"
                android:inputType="text"
                android:background="@drawable/textview_border"
                android:layout_marginBottom="10dp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/useremail"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:elevation="5dp"
                android:hint="Useremail"
                android:inputType="text"
                android:background="@drawable/textview_border"
                android:layout_marginBottom="10dp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/usergender"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:elevation="5dp"
                android:hint="Usergender"
                android:inputType="text"
                android:background="@drawable/textview_border"
                android:layout_marginBottom="10dp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/userweight"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:elevation="5dp"
                android:hint="Userweight"
                android:inputType="text"
                android:background="@drawable/textview_border"
                android:layout_marginBottom="10dp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/userheight"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:elevation="5dp"
                android:hint="Userheight"
                android:inputType="text"
                android:background="@drawable/textview_border"
                android:layout_marginBottom="10dp"
                android:gravity="center"/>


            <Button
                android:id="@+id/uploadInfoButton"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Update Info" />

            <Button
                android:id="@+id/blacklistButton"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Blacklist" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
